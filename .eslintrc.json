{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["warn", "single"], // использовать одинарные кавычки
        "indent": ["error", 2, { "SwitchCase": 1 }], //Обеспечение единообразия отступов 
        "spaced-comment": ["error", "always", { "markers": ["/"] }], //Это правило обеспечивает согласованность интервалов после начала комментария // или /*. (If "always" then the // or /* must be followed by at least one whitespace)
        "camelcase": ["error", { "ignoreGlobals": true }] // имена переменных и функций в стиле camelCase
    }
}
